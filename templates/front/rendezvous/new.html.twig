{% extends 'base.html.twig' %}

{% block content %}
<div class="container mt-5">
    <h1 class="text-center text-primary mb-5">Réserver un Rendez-vous</h1>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-5">
                    {{ form_start(rendezVousForm) }}

                    <div class="mb-3">
                        {{ form_label(rendezVousForm.dateHeure, 'Date du rendez-vous') }}
                        {{ form_widget(rendezVousForm.dateHeure, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(rendezVousForm.dateHeure) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(rendezVousForm.professionnel, 'Professionnel') }}
                        {{ form_widget(rendezVousForm.professionnel, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(rendezVousForm.professionnel) }}
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-lg px-5">Réserver</button>
                    </div>

                    {{ form_end(rendezVousForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
